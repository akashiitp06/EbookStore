@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="confirmation-container">
    <div class="text-center">
        <h1 class="display-4 text-success">@ViewData["Title"]</h1>
        <p class="lead">
            @if (Model.DisplayConfirmAccountLink)
            {
                <span class="text-info">
                    This app does not currently have a real email sender registered. See <a href="https://aka.ms/aspaccountconf" target="_blank">these docs</a> for how to configure a real email sender.
                </span>
                <br />
                <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-outline-primary mt-3">Click here to confirm your account</a>
            }
            else
            {
                <span class="text-info">Please check your email to confirm your account.</span>
            }
        </p>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary mt-4">Go to Login Page</a>
    </div>
</div>

<style>
    .confirmation-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .display-4 {
        font-size: 2.5rem;
        font-weight: 300;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }
</style>
